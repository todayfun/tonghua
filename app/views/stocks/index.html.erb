<h1>Listing stocks <%= @stocks.size %></h1>

<table border="1" cellspacing="0" cellpadding="1">
  <tr>
    <th>Code</th>
    <th>Name</th>
    <th>增长_VS_PE</th>
    <th>净利润增长</th>
    <th>财务信息</th>
    <th></th>
    <th></th>
  </tr>

<% @stocks.each do |stock| %>
  <tr>
    <td><%= link_to "#{stock.code}#{riselabel(stock)}", stockurl(stock.code,stock.stamp), :target=>'_blank' %></td>
    <td><%= truncate(stock.name, length:12)  %></td>
    <td><%= (stock.good).map{|k,v| "#{k}:#{v}"}.join("<br/>").html_safe %></td>
    <td><%= stock.rate_of_profit %></td>
    <td><%= (stock.info.merge(pe:stock.pe)).map{|k,v| "#{k}:#{v}"}.join("<br/>").html_safe %></td>
    <td><%= link_to "本地图表", stock%></td>
    <td><%= link_to "同花顺图表", link_to_tonghuashun_finance(stock), :target=>'_blank'%></td>
  </tr>
<% end %>
</table>

<br />
